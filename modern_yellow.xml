<theme>
    <formatVersion>3</formatVersion>

	<view name="system, basic, detailed">
	
		<image name="background" extra="true">
			<path>./assets/bg.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<image name="logo">
			<pos>0.023 0.015</pos>
			<maxSize>0.348 0.081</maxSize>
			<origin>0 0</origin>
		</image>
		
		<helpsystem name="help">
			<pos>0.012 0.96</pos>
			<textColor>ffffffd0</textColor>
			<iconColor>ffffffd0</iconColor>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>
		
	</view>


	<view name="system">
	
		<image name="Overlay_System" extra="true">
			<path>./assets/overlay_system.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>ffea01</color>
		</image>
		
	</view>

    <view name="basic">

		<image name="Overlay_Basic" extra="true">
			<path>./assets/overlay_basic.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>ffea01</color>
		</image>
		
		<textlist name="gamelist">
			<pos>0.032 0.156</pos>
			<size>0.934 0.708</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<selectorColor>00000080</selectorColor>
			<selectedColor>ffea01</selectedColor>
			<primaryColor>f0f0f0</primaryColor>
			<secondaryColor>c0c0c0</secondaryColor>
			<forceUppercase>0</forceUppercase>
			<lineSpacing>1.5</lineSpacing>
			<!--<scrollSound>./assets/flipper.wav</scrollSound>-->
		</textlist>

	</view>

	<view name="detailed">
	
		<image name="Overlay_Detailed" extra="true">
			<path>./assets/overlay_detailed.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>ffea01</color>
		</image>
		
		<textlist name="gamelist">
			<pos>0.022 0.149</pos>
			<size>0.349 0.704</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.0275</fontSize>
			<selectorColor>00000080</selectorColor>
			<selectedColor>ffea01</selectedColor>
			<primaryColor>f0f0f0</primaryColor>
			<secondaryColor>c0c0c0</secondaryColor>
			<forceUppercase>0</forceUppercase>
			<lineSpacing>1.5</lineSpacing>
			<!--<scrollSound>./assets/flipper.wav</scrollSound>-->
		</textlist>
		
		

